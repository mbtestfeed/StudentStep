<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @teacher.name %>
</p>
<p>
  <strong>Subjects:</strong>
  <% if @teacher.subjects.any? %>
  <ul>
    <% @teacher.subjects.each do |subject| %>
        <li> <%= link_to subject.name, subject %> </li>
    <% end %>

  </ul>
  <% end %>

</p>

